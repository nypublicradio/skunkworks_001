{
  "name": "skunkworks",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "bundle": "webpack --config webpack.config.js --mode development",
    "scss": "node-sass --output-style compressed -o dist/css src/scss",
    "lint": "eslint src/js || true",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:js": "run-s lint bundle",
    "build:css": "run-s scss autoprefixer",
    "build:static": "cp -r src/static/ dist",
    "build": "run-p build:*",
    "watch:js": "onchange src/js/** -- npm run build:js",
    "watch:css": "onchange src/scss/**.scss -- npm run build:css",
    "watch:static": "onchange src/static/** -- npm run build:static",
    "watch": "run-p watch:*",
    "clean": "rm -r dist; mkdir dist"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "autoprefixer": "^9.1.5",
    "babel-loader": "^8.0.2",
    "eslint": "^5.5.0",
    "handlebars": "^4.0.12",
    "handlebars-loader": "^1.7.0",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "postcss-cli": "^6.0.0",
    "webpack": "^4.18.0",
    "webpack-cli": "^3.1.0"
  }
}
